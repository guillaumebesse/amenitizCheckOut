
<h1>Amenitiz CheckOut</h1>


<h2>Products list</h2>


<table class="table-fixed w-80">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Add</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td>€ <%= product.price %></td>
      <td><%= link_to "Add", checkout_add_path(product_code: product.code) %></td>
    </tr>
  <% end %>
  </tbody>
</table>



<h2>Shopping Cart</h2>


<table class="table-fixed w-80">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Total</th>
  </thead>
  <tbody>
  <% @cartItemsCheckout.checkout_items.each do |checkout_item| %>
    <tr>
      <td>
        <%= checkout_item.cart_item.product.name %>
        <% if checkout_item.has_special_offer %>

          <span class="text-sm">Special offer</span>

    <% end %>
      </td>
      <td>€ <%= checkout_item.cart_item.product.price %></td>
      <td><%= checkout_item.cart_item.quantity %></td>
      <td>€ <%= checkout_item.total_price %></td>
    </tr>
  <% end %>

  <% if @cartItemsCheckout.nil? %>
    <tr>
      <td colspan="3">Your cart is empty</td>
    </tr>
  <% else %>
    <tr>
      <td colspan="3">Total</td>
      <td>€ <%= @cartItemsCheckout.total_price %></td>
    </tr>
  <% end %>


  </tbody>
